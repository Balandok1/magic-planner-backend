generator client {
  provider = "prisma-client-js"
}

model Deck {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  cards Card[]
}

model Card {
  id        Int     @id @default(autoincrement())
  scryfallId String // O ID que vem da API do Scryfall
  name      String
  quantity  Int
  
  // Relação com o Deck
  deckId Int
  deck   Deck @relation(fields: [deckId], references: [id], onDelete: Cascade)
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
