generator client {
  provider = "prisma-client-js"
}

model Deck {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  cards Card[]
}

model Card {
  id         Int     @id @default(autoincrement())
  scryfallId String
  name       String
  quantity   Int
  type_line  String? // O '?' torna o campo opcional, uma boa prática
  cmc        Float?
  image_uris String? // Salvaremos o JSON da imagem como uma string
  
  // Relação com o Deck
  deckId Int
  deck   Deck @relation(fields: [deckId], references: [id], onDelete: Cascade)
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
